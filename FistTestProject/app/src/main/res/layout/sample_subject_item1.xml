<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <import type="com.coloros.yoli.sample.main.ui.SubjectConverter"/>
    <variable name="subject"
              type="com.coloros.yoli.sample.main.pojo.Subject"/>
    <variable name="callback"
              type="com.coloros.yoli.sample.main.ui.SubjectClickCallback"/>
</data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{() ->  callback.onClick(subject)}">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sample_image"
        android:layout_width="90dp"
        android:layout_height="133.3dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:frescoUrl="@{subject.image}"/>

    <TextView
        android:id="@+id/sample_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text='@{SubjectConverter.titles(subject.titles)}'
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sample_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sample_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="@{SubjectConverter.directorsAndCasts(subject.directors, subject.casts)}"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/sample_title"/>

    <TextView
        android:id="@+id/sample_others"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="@{SubjectConverter.yearAndGenres(subject.years, subject.genres)}"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/sample_director"/>

    <TextView
        android:id="@+id/sample_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="@{String.valueOf(subject.rating)}"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/sample_others"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="@{subject.alt}"
        android:textColor="?android:attr/textColorTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/sample_rating"/>

</android.support.constraint.ConstraintLayout>
</layout>